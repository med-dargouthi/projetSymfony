{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1 class="mb-4">Menu</h1>
<div class="card p-4 shadow-lg rounded">


    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Plat</th>
                <td>{{ menu.plat }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ menu.prix }}</td>
            </tr>
            <tr>
                <th>Disponibilite</th>
                <td>{{ menu.disponibilite ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
</div>
    <a href="{{ path('app_menu_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_menu_edit', {'id': menu.id}) }}" class="btn btn-warning">edit</a>

    {{ include('menu/_delete_form.html.twig') }}
{% endblock %}
