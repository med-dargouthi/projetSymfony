{% extends 'base.html.twig' %}

{% block title %}Menu index{% endblock %}

{% block body %}
    <h1 class="mb-4">Menu index</h1>
<div class="card p-4 shadow-lg rounded">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Plat</th>
                <th>Prix</th>
                <th>Disponibilite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for menu in menus %}
            <tr>
                <td>{{ menu.id }}</td>
                <td>{{ menu.plat }}</td>
                <td>{{ menu.prix }}</td>
                <td>{{ menu.disponibilite ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_menu_show', {'id': menu.id}) }}" class="btn btn-primary btn-sm">show</a>
                    <a href="{{ path('app_menu_edit', {'id': menu.id}) }}" class="btn btn-warning btn-sm">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('app_menu_new') }}" class="btn btn-success mt-2">Create new</a>
{% endblock %}
