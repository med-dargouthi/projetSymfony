{% extends 'base.html.twig' %}

{% block title %}ReservationTransport index{% endblock %}

{% block body %}
    <h1 class="mb-4">ReservationTransport index</h1>
<div class="card p-4 shadow-lg rounded">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_reservation</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation_transport in reservation_transports %}
            <tr>
                <td>{{ reservation_transport.id }}</td>
                <td>{{ reservation_transport.dateReservation ? reservation_transport.dateReservation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation_transport.statut }}</td>
                <td>
                    <a href="{{ path('app_reservation_transport_show', {'id': reservation_transport.id}) }}" class="btn btn-primary btn-sm">show</a>
                    <a href="{{ path('app_reservation_transport_edit', {'id': reservation_transport.id}) }}" class="btn btn-warning btn-sm">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('app_reservation_transport_new') }}" class="btn btn-success mt-2">Create new</a>
{% endblock %}
